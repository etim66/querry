import { Button, CheckBox, HorizontalBox, VerticalBox } from "std-widgets.slint";
import { AppConfig } from "../global.slint";
import { Theme } from "../theme.slint";

export component CollectionComponent inherits Rectangle {
    in property <string> name;
    in property <string> id;

    height: 40px;
    border-radius: Theme.border_radius;
    touch-area := TouchArea {}
    border-color: touch-area.has-hover ? Theme.primary_color : self.background;
    border-width: Theme.hover_border_width;

    HorizontalLayout {
        alignment: space-between;
        padding-top: 5px;
        padding-bottom: 5px;
        padding-left: 10px;
        padding-right: 10px;
        spacing: 10px;

        folder := Image {
            source: @image-url("../icons/folder.svg");
            width: Theme.icon_width;
            padding-right: 10px;
            colorize: Theme.icon_color;

            touch := TouchArea{
                clicked => {
                    AppConfig.show_icons_popup = true;
                }
            }
        }

        Text {
            vertical-alignment: center;
            text: name;
            font-size: Theme.label_font_size_medium_small;
            color: Theme.label_text_color;
        }

        more := Image {
            source: @image-url("../icons/more.svg");
            width: Theme.icon_width;
            padding-left: 10px;
            colorize: Theme.icon_color;
        }
        
    }
}    