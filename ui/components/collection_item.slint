import { Button, CheckBox, HorizontalBox, VerticalBox } from "std-widgets.slint";
import { AppConfig } from "../global.slint";
import { Theme } from "../theme.slint";

export component CollectionComponent inherits Rectangle {
    in property <string> name;
    in property <string> id;

    padding: 5px;

    Rectangle {
        height: 30px;
        background: Theme.app_background_color.darker(20%);
        border-radius: Theme.border_radius;
        border-color: Theme.border_color;
        border-width: Theme.border_width;
        animate drop-shadow-blur {
            duration: 100ms;
            easing: ease-out;
        }
        
        Text {
            text: name;
            font-size: Theme.label_font_size_medium;
            color: Theme.label_text_color;
        }

        touch-area := TouchArea { }
    }
    
}    